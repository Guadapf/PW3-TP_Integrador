@model EmpleadoModel

@(Model.Nombre)

<div class="container my-4">
    <div class="row mb-3">
        <div class="col text-center">
            <h2>@(Model.Nombre + " " + Model.Apellido)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="~/user-tie-solid.svg" class="img-fluid rounded" style="max-width: 10em;">
        </div>
        <div class="col-md-8">
            <div class="container">
                <div class="row mb-2">
                    <div class="col">
                        <strong>País:</strong> @(Model.PaisDescripcion)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <strong>Departamento:</strong> @(Model.DepartamentoDescripcion)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <strong>Edad:</strong> @(DateOnly.FromDateTime(DateTime.Now).AddYears(0 - Model.FechaNac.Year).Year)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <strong>Antigüedad:</strong> @(DateOnly.FromDateTime(DateTime.Now).AddYears(0 - Model.FechaIngreso.Year).Year)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <strong>Género:</strong> @(Model.GeneroDescripcion)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-4">
    <div class="row text-center">
        <div class="col-md-3">
            <div class="p-3 border rounded">
                <div class="mb-2">
                    <strong>Base:</strong> @($"$OWO")
                </div>
                <div>
                    <strong>Subtotal:</strong> $700,000.00
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded">
                <div class="mb-2">
                    <strong>Compensación:</strong> @($"*AH RE LOCO")
                </div>
                <div>
                    <strong>Subtotal:</strong> $875,000.00
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded">
                <div class="mb-2">
                    <strong>Bono:</strong> @($"+$AHRE")
                </div>
                <div>
                    <strong>Subtotal:</strong> $925,000.00
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded">
                <div class="mb-2">
                    <strong>Total:</strong>
                </div>
                <div>
                    @($"${Model.Salario}")
                </div>
            </div>
        </div>
    </div>
</div>