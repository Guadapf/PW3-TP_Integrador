@model AltaPaisModel

@{
    ViewBag.Title = "Alta Pais";
}
<a asp-area="" asp-controller="Pais" asp-action="ListarPaises" class="bg-dark rounded" style="color:white;text-decoration:none;padding:0.5em;">
    <img src="~/arrow-left-solid.svg" class="m-1" style="width: 1.1em;">
</a>
<form action="/Pais/AltaPais" method="post" id="fondo">

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion)
        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", type = "text" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SalarioBase)
        @Html.TextBoxFor(model => model.SalarioBase, new { @class = "form-control", type = "number" })
    </div>

    <div class="container-fluid d-flex align-items-center">
        <button type="submit" class="btn btn-primary" style="margin:0.5em;">Procesar</button>
        <a asp-area="" asp-controller="Pais" asp-action="ListarPaises" class="btn btn-danger" style="margin:0.5em;">Cancelar</a>
    </div>

</form>