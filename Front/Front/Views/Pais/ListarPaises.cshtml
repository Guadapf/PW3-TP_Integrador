@model List<Front.Models.PaisModel>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

@if (TempData["StackTrace"] != null)
{
    <div class="alert alert-warning">
        @TempData["StackTrace"]
    </div>
}

<div class="container-fluid d-flex justify-content-between align-items-center">
    <a asp-area="" asp-controller="Empleado" asp-action="Index" class="bg-dark rounded" style="color:white;text-decoration:none;padding:0.5em;">Volver</a>
    <a asp-area="" asp-controller="Pais" asp-action="AltaPais" class="bg-dark rounded d-inline-flex justify-content-around align-items-center" style="width:10em;color:white;text-decoration:none;padding:0.5em;">
        <img src="~/plus-solid.svg" class="m-1" style="max-width: 1.1em;">  <p class="m-1">Dar de Alta</p>
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr>
                <td>@pais.IdPais</td>
                <td>@pais.Descripcion</td>
            </tr>
        }
    </tbody>
</table>